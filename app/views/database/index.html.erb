<h1>This is the Pokenalysis Database</h1>

<%= form_tag do %>

<%= label_tag :pokemon %>
<%= collection_select :post, :pokemon_id, Pokemon.all, :id, :name %>

<%= submit_tag("Pull Up Stats") %>

<% end %>

<% if @current_pokemon != nil %>
  <h3>This pokemon's health is: <%= @current_pokemon.health %></h3> <br>
  <h3>This pokemon's power is: <%= @current_pokemon.power %></h3> <br>
  <h3>This pokemon's speed is: <%= @current_pokemon.speed %></h3> <br>
<% end  %>
